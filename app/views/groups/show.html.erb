<div class="col-md-12">
  <div class="group">
    <% if @group.editable_by?(current_user) %>
   <%= link_to '返回首頁', { :controller=> 'groups', :action => 'index' }, class: "btn btn-primary pull-right" %>
    
    <%= link_to("Test (Medium)", test_group_path(@group), class: "btn btn-primary pull-right")%>

    <%= link_to("Test ", quiz_group_path(@group), class: "btn btn-info pull-right")%>

     <%= link_to("新增單字", new_group_post_path(@group), class: "btn btn-success pull-right") %>




    <% end %>
  </div>
 <h2 class="text-dark" ><%= @group.title %></h2> 

 <br>

 <br>

 
 <table class="table">
   <thead>
     <tr>
       <th>單字</th>
       <th>解釋</th>
       <th colspan="10"></th>
     </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td class="p-3 mb-2 bg-primary text-white"><%= post.content %></td>
         
         <td><%= post.description %> </td>
         <td>
           <% if post.editable_by?(current_user) %>
           <%= link_to("編輯單字與解釋", edit_group_post_path(post.group, post),
                       class: "btn btn-sm btn-success")%>
           <%= link_to("刪除", group_post_path(post.group, post),
                       class: "btn btn-sm btn-danger", method: :delete, 
                       data: { confirm: "Are you sure?" } )%>

                       <% end %>



         </td>
       </tr>
     <% end %>
   </tbody>
 </table>


</div>