<h1 class="text-center">編輯單字</h1>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@group,@post] do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: "form-control"}, label: "單字" %>
      <%= f.input :description, input_html: {  class: "form-control"}, label: "解釋" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
      <%= link_to("回到單字表", group_path(@group), class: "btn btn-success pull-right") %>
    </div>
  <% end %>
</div>
